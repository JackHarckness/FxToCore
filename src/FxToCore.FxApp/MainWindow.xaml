<Window x:Class="FxToCore.FxApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FxToCore.FxApp"
        mc:Ignorable="d"
        Title="MainWindow"
        SizeToContent="WidthAndHeight">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="70"/>
            <RowDefinition Height="10"/>
            <RowDefinition MaxHeight="20"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="_tbInput" Grid.Row="0" Width="150" Background="LightGray"></TextBox>
        <Button Grid.Row="2" Width="50" Click="OnButtonClick">Reverse</Button>
    </Grid>
</Window>
